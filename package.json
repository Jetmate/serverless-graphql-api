{
  "name": "graphql-api",
  "scripts": {
    "babel": "babel --presets es2015 build -d build",
    "copy": "rsync -r lib/ build",
    "deploy": "npm-run-all lint:js copy babel sls",
    "jest": "jest --coverage",
    "jest:u": "jest -u --coverage",
    "lint:js": "eslint lib",
    "lint:js:fix": "eslint lib --fix",
    "sls": "sls deploy --verbose",
    "test": "npm-run-all lint:js copy babel jest",
    "test:u": "npm-run-all lint:js copy babel jest:u"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.25.0",
    "graphql": "^0.10.5",
    "graphql-server-lambda": "^1.0.4",
    "graphql-tools": "^1.1.0",
    "merge-graphql-schemas": "^1.1.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "aws-sdk": "^2.93.0",
    "aws-sdk-mock": "^1.7.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.23.1",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "jest-cli": "^20.0.4",
    "lambda-tester": "^3.0.2",
    "npm-run-all": "^4.0.2",
    "serverless-plugin-include-dependencies": "^2.1.2",
  }
}
